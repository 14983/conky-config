    update_interval = 2,

    own_window = true,
    own_window_type = 'normal',
    own_window_hints = 'below,skip_pager,skip_taskbar,sticky,undecorated',
    own_window_transparent = true,
    own_window_argb_visual = true,
    own_window_argb_value = 255,

    draw_shades = false,
    draw_outline = false,
    draw_borders = false,
